<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Fragment_Start">

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="13dp"
        android:text="All courses"
        app:fontFamily="@font/consolas_bold"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="13dp"
        android:text="Homeworks"
        app:fontFamily="@font/consolas_bold"
        tools:ignore="TouchTargetSizeCheck" />

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="370dp"
        android:layout_height="400dp"
        android:src="@drawable/creative_coding_explorations"
        android:layout_marginTop="380dp"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        android:text="Учим IT-профессиям с нуля и гарантируем новую работу"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:fontFamily="@font/consolas_bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="219dp"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="170dp"
        android:text="ДОСТОЙНАЯ ЗАРПЛАТА Найдем вам работу по новой профессии с
        гарантированным уровнем стартовой зарплаты."
        android:textColor="@color/white"
        android:textSize="15dp"
        app:fontFamily="@font/consolas_bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="166dp"
        android:layout_height="100dp"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="20dp"
        android:text="ВОЗВРАТ ДЕНЕГ    Если не устроим на работу за 4 месяца — вернем деньги."
        android:textColor="@color/white"
        android:textSize="15dp"
        app:fontFamily="@font/consolas_bold" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="231dp"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="350dp"
        android:text="ЖЕЛЕЗНАЯ ГАРАНТИЯ         Все условия зафиксировали в договоре."
        android:textColor="@color/white"
        android:textSize="15dp"
        app:fontFamily="@font/consolas_bold" />

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="@color/black"
        android:src="@drawable/___2023_03_30_00_50_42_photoroom_png_photoroom"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <Button
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="430dp"
        app:fontFamily="@font/consolas_bold"
        android:text="Уведомление" />

    <Button
        android:id="@+id/server"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="430dp"
        app:fontFamily="@font/consolas_bold"
        android:text="Баннер" />

</FrameLayout>